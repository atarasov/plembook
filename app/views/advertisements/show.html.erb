<%- model_class = @advertisement.class -%>
<div class="page-header">
  <h1><%= @advertisement.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @advertisement.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ad_type_id) %>:</strong></dt>
  <dd><%= @advertisement.ad_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_of_ads_id) %>:</strong></dt>
  <dd><%= @advertisement.category_of_ads_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @advertisement.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @advertisement.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sex) %>:</strong></dt>
  <dd><%= @advertisement.sex %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @advertisement.phone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              advertisements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_advertisement_path(@advertisement), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              advertisement_path(@advertisement),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
